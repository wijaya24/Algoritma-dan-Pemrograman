# Program menentukan bilangan ganjil dan genap

# Menentukan bilangan ganjil dan genap
bilangan = int(input("Masukan bilangan: "))

def cek_bilangan(bilangan):
    if bilangan % 2 == 0:
        print (bilangan, "adalah bilangan genap")
    else:
        print (bilangan, "adalah bilangan Ganjil")

print(cek_bilangan(bilangan))

# Mengalikan bilangan setelahnya
hasil = bilangan * (bilangan + 1)
print("Hasil perkalian bilangan setelahnya: ", hasil)
